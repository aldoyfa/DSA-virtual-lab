{
  "name": "dsa-virtual-lab",
  "version": "2.0.0",
  "description": "Data Structures and Algorithm Virtual Lab - Sorting Visualizer",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:prod": "vite preview --port 15012 --host 0.0.0.0",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "docker:build": "docker build -t dsa-virtual-lab .",
    "docker:run": "docker run -d --name dsa-virtual-lab -p 15012:15012 dsa-virtual-lab",
    "docker:stop": "docker stop dsa-virtual-lab",
    "docker:clean": "docker rm dsa-virtual-lab",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "vite": "^5.4.1"
  }
}
